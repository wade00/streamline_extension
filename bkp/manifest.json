{
  "manifest_version": 2,

  "name": "Streamline Lister",
  "description": "This extension updates machine listings on select sites",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["background.js"],
    "page": "background.html"
  },

  // "page_action": {
  //   "default_icon": "icon.png",
  //   "default_popup": "inventory.html",
  //   "default_title": "Streamline"
  // },

  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["jquery.js", "content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "https://*.google.com/*"
  ]
}
